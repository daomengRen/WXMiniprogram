.container {
  padding: 40rpx;
  min-height: 100vh;
  background: #f8fafc;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.exercise-info {
  width: 100%;
  padding: 20rpx;
  margin-bottom: 40rpx;
  background: #fff;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.exercise-name {
  font-size: 36rpx;
  font-weight: 600;
  color: #1a365d;
  text-align: center;
  display: block;
}

.training-info {
  width: 100%;
  background: #fff;
  border-radius: 16rpx;
  padding: 20rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.info-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  border-bottom: 1rpx solid #e2e8f0;
}

.info-item:last-child {
  border-bottom: none;
}

.label {
  font-size: 28rpx;
  color: #4a5568;
}

.value {
  font-size: 28rpx;
  color: #2d3748;
  font-weight: 500;
}

.timer-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 220rpx 0;
  margin-bottom: 0;
}

.timer {
  font-size: 250rpx;
  font-weight: 800;
  color: #2d3748;
  font-family: monospace;
}

.timer.preparing {
  color: #ed8936;
  animation: pulse 1s infinite;
}

.status-text {
  font-size: 32rpx;
  color: #4a5568;
  margin-top: 20rpx;
}

.control-buttons {
  width: 100%;
  display: flex;
  justify-content: center;
  gap: 20rpx;
  margin-top: 40rpx;
}

.btn {
  flex: 1;
  max-width: 200rpx;
  height: 80rpx;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: 600;
}

.start-btn {
  background: #48bb78;
  color: #fff;
}

.stop-btn {
  background: #e53e3e;
  color: #fff;
}

.reset-btn {
  background: #edf2f7;
  color: #4a5568;
}

@keyframes pulse {
  0% {
    transform: scale(1);
  }
  50% {
    transform: scale(1.05);
  }
  100% {
    transform: scale(1);
  }
} 