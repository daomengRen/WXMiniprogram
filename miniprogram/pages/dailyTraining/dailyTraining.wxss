.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.section {
  margin-bottom: 40rpx;
  background-color: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  padding-left: 10rpx;
  border-left: 8rpx solid #4CAF50;
}

/* 日历样式 */
.calendar-container {
  padding: 10rpx;
}

.calendar-header {
  margin-bottom: 20rpx;
}

.calendar-month {
  text-align: center;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 10rpx 0;
}

.calendar-arrow {
  font-size: 24rpx;
  color: #666;
  margin-left: 10rpx;
}

.weekdays {
  display: flex;
  justify-content: space-around;
  margin-bottom: 10rpx;
  border-bottom: 1rpx solid #eee;
  padding-bottom: 10rpx;
}

.weekday {
  width: 14.28%;
  text-align: center;
  font-size: 24rpx;
  color: #666;
}

.days {
  display: flex;
  flex-wrap: wrap;
}

.day {
  width: 14.28%;
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 28rpx;
  color: #333;
  position: relative;
}

.day.other-month {
  color: #ccc;
}

.day.today {
  background-color: #e8f5e9;
  border-radius: 50%;
  color: #4CAF50;
  font-weight: bold;
}

.day.selected {
  background-color: #4CAF50;
  color: #fff;
  border-radius: 50%;
}

.day.has-training::after {
  content: '';
  position: absolute;
  bottom: 8rpx;
  width: 8rpx;
  height: 8rpx;
  background-color: #4CAF50;
  border-radius: 50%;
}

/* 训练记录样式 */
.training-list {
  margin-top: 20rpx;
}

.training-item {
  background: #fff;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.training-header {
  margin-bottom: 10rpx;
}

.training-time {
  font-size: 24rpx;
  color: #666;
}

.training-content {
  display: flex;
  flex-direction: column;
}

.training-info {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.training-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.training-detail {
  font-size: 24rpx;
  color: #666;
}

.no-training {
  text-align: center;
  padding: 40rpx 0;
  color: #999;
  font-size: 28rpx;
} 