/* pages/artDetail/artDetail.wxss */
.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.header {
  padding: 20rpx 0;
  text-align: center;
  margin-bottom: 30rpx;
}

.back-btn {
  font-size: 28rpx;
  color: #4CAF50;
  padding: 10rpx 20rpx;
  border: 1px solid #4CAF50;
  border-radius: 30rpx;
  margin-right: 20rpx;
}

.art-title {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 20rpx;
}

.art-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: #f0f9ff;
  box-shadow: 0 4rpx 10rpx rgba(0,0,0,0.05);
  padding: 0;
  border: 2rpx solid #e6f4ff;
}

.section {
  margin-bottom: 40rpx;
  background-color: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  padding-left: 10rpx;
  border-left: 8rpx solid #4CAF50;
}

.overview {
  display: flex;
  justify-content: center;
  padding: 20rpx 0;
}

.stat-item {
  text-align: center;
}

.stat-value {
  font-size: 48rpx;
  font-weight: bold;
  color: #4CAF50;
  display: block;
}

.stat-label {
  font-size: 24rpx;
  color: #666;
}

.level-stats {
  margin-top: 10rpx;
}

.level-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 10rpx;
  border-bottom: 1rpx solid #eee;
  background: #fff;
}

.level-item:last-child {
  border-bottom: none;
}

.level-info {
  display: flex;
  flex-direction: column;
}

.level-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.level-id {
  font-size: 24rpx;
  color: #666;
  margin-top: 4rpx;
}

.level-count {
  font-size: 24rpx;
  color: #666;
  font-weight: normal;
}

/* 难度统计样式 */
.difficulty-stats {
  margin-top: 10rpx;
}

.difficulty-level {
  margin-bottom: 8rpx;
  background: #fff;
  border-radius: 8rpx;
}

.difficulty-level:last-child {
  margin-bottom: 0;
}

.difficulty-level-title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 12rpx 16rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  margin-bottom: 30rpx;
  cursor: pointer;
}

.level-header {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.level-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #1a1a1a;
}

.level-count {
  font-size: 28rpx;
  color: #666;
}

.level-arrow {
  font-size: 32rpx;
  color: #666;
  transition: transform 0.3s ease;
}

.level-arrow.expanded {
  transform: rotate(90deg);
}

.difficulty-items {
  margin-left: 32rpx;
  margin-top: 16rpx;
}

.difficulty-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 32rpx;
  background: #fff;
  border-radius: 8rpx;
  margin-bottom: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.difficulty-info {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.difficulty-name {
  font-size: 28rpx;
  color: #1a1a1a;
}

.difficulty-desc {
  font-size: 24rpx;
  color: #666;
}

.difficulty-count {
  font-size: 28rpx;
  color: #3b82f6;
  font-weight: 500;
} 