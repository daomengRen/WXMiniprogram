.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.header {
  padding: 20rpx 0;
  text-align: center;
  margin-bottom: 30rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
}

.section {
  margin-bottom: 40rpx;
  background-color: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  padding-left: 10rpx;
  border-left: 8rpx solid #4CAF50;
}

/* 统计数据样式 */
.stats-container {
  display: flex;
  justify-content: space-around;
  padding: 20rpx 0;
}

.stat-item {
  text-align: center;
}

.stat-value {
  font-size: 48rpx;
  font-weight: bold;
  color: #4CAF50;
  display: block;
}

.stat-label {
  font-size: 24rpx;
  color: #666;
}

/* 日历样式 */
.calendar-container {
  padding: 10rpx;
}

.calendar-header {
  margin-bottom: 20rpx;
}

.calendar-month {
  text-align: center;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 10rpx 0;
}

.calendar-arrow {
  font-size: 24rpx;
  color: #666;
  margin-left: 10rpx;
}

.weekdays {
  display: flex;
  justify-content: space-around;
  margin-bottom: 10rpx;
  border-bottom: 1rpx solid #eee;
  padding-bottom: 10rpx;
}

.weekday {
  width: 14.28%;
  text-align: center;
  font-size: 24rpx;
  color: #666;
}

.days {
  display: flex;
  flex-wrap: wrap;
}

.day {
  width: 14.28%;
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 28rpx;
  color: #333;
  position: relative;
}

.day.other-month {
  color: #ccc;
}

.day.today {
  background-color: #e8f5e9;
  border-radius: 50%;
  color: #4CAF50;
  font-weight: bold;
}

.day.has-training::after {
  content: '';
  position: absolute;
  bottom: 8rpx;
  width: 8rpx;
  height: 8rpx;
  background-color: #4CAF50;
  border-radius: 50%;
}

/* 动作统计样式 */
.art-stats {
  margin-top: 10rpx;
}

.art-stat-item {
  display: flex;
  align-items: center;
  padding: 20rpx 10rpx;
  border-bottom: 1rpx solid #eee;
}

.art-icon {
  width: 80rpx;
  height: 80rpx;
  margin-right: 20rpx;
  border-radius: 50%;
  background: #f0f9ff;
  box-shadow: 0 4rpx 10rpx rgba(0,0,0,0.05);
  padding: 0;
  border: 2rpx solid #e6f4ff;
}

.art-info {
  flex: 1;
}

.art-name {
  font-size: 28rpx;
  font-weight: bold;
  display: block;
}

.art-training-count {
  font-size: 24rpx;
  color: #666;
}

.art-arrow {
  color: #999;
  font-size: 32rpx;
}

/* 成就列表样式 */
.achievements-list {
  margin-top: 10rpx;
  background-color: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.achievement-item {
  display: flex;
  align-items: center;
  padding: 20rpx 10rpx;
  border-bottom: 1rpx solid #eee;
}

.achievement-item:last-child {
  border-bottom: none;
}

.achievement-icon {
  font-size: 48rpx;
  margin-right: 20rpx;
}

.achievement-info {
  flex: 1;
}

.achievement-name {
  font-size: 28rpx;
  font-weight: bold;
  display: block;
}

.achievement-desc {
  font-size: 24rpx;
  color: #666;
}

.achievement-status {
  font-size: 24rpx;
}

.unlocked .achievement-status {
  color: #4CAF50;
}

.locked .achievement-status {
  color: #999;
}

.locked {
  opacity: 0.6;
}

/* 数据管理样式 */
.data-management {
  display: flex;
  justify-content: space-around;
  margin-top: 20rpx;
}

.data-btn {
  background-color: #4CAF50;
  color: white;
  font-size: 28rpx;
  padding: 10rpx 30rpx;
  border-radius: 30rpx;
  width: 45%;
} 